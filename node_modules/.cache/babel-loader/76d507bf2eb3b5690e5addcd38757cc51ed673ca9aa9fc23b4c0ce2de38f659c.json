{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from 'axios';\nimport { EventSourcePolyfill } from 'event-source-polyfill';\nexport default {\n  name: 'HeaderComponent',\n  data() {\n    return {\n      logo: require('@/assets/images/ico_logo.png'),\n      isLogin: false,\n      notifications: []\n    };\n  },\n  computed: {\n    unreadNotificationCount() {\n      return this.notifications.filter(notification => notification.delYN === 'N').length;\n    }\n  },\n  created() {\n    const token = localStorage.getItem('token');\n    this.isLogin = !!token;\n    if (this.isLogin) {\n      this.fetchNotifications(); // 새로고침 시에만 전체 알림 목록을 가져옵니다.\n      this.setupSSE(); // SSE 연결을 설정하여 실시간 알림을 받습니다.\n    }\n  },\n  methods: {\n    fetchNotifications() {\n      axios.get(`${process.env.VUE_APP_API_BASE_URL}/api/notifications/list`, {\n        headers: {\n          Authorization: `Bearer ${localStorage.getItem('token')}`\n        }\n      }).then(response => {\n        this.notifications = response.data;\n        console.log(this.notifications);\n      }).catch(error => {\n        console.error('알림 가져오기 오류:', error);\n      });\n    },\n    setupSSE() {\n      const token = localStorage.getItem('token');\n      const eventSource = new EventSourcePolyfill(`${process.env.VUE_APP_API_BASE_URL}/subscribe`, {\n        headers: {\n          Authorization: `Bearer ${token}`\n        }\n      });\n      eventSource.addEventListener('notification', event => {\n        const notification = JSON.parse(event.data);\n        console.log('실시간 알림 수신:', notification);\n        this.notifications.push(notification); // 실시간 알림을 추가합니다.\n      });\n      eventSource.onerror = error => {\n        console.error('SSE 연결 오류:', error);\n      };\n    },\n    markAsRead(id) {\n      axios.get(`${process.env.VUE_APP_API_BASE_URL}/api/notifications/update/${id}`, {\n        headers: {\n          Authorization: `Bearer ${localStorage.getItem('token')}`\n        }\n      }).then(() => {\n        const notification = this.notifications.find(n => n.id === id);\n        if (notification) {\n          notification.delYN = 'Y';\n        }\n      }).catch(error => {\n        console.error('알림 상태 업데이트 오류:', error);\n      });\n    },\n    navigate(section) {\n      const routes = {\n        '강좌': {\n          name: 'SubjectList',\n          params: {\n            category: 'subject'\n          }\n        },\n        '추천': {\n          name: 'Recommendation'\n        },\n        // 예시로 추천을 추가했습니다. 실제 라우트로 변경하세요.\n        '이벤트': {\n          name: 'BoardList',\n          params: {\n            category: 'event'\n          }\n        },\n        '공지사항': {\n          name: 'BoardList',\n          params: {\n            category: 'notice'\n          }\n        },\n        '자유게시판': {\n          name: 'BoardList',\n          params: {\n            category: 'post'\n          }\n        },\n        'QnA': {\n          name: 'QnaList',\n          params: {\n            category: 'qna'\n          }\n        }\n      };\n      if (routes[section]) {\n        this.$router.push(routes[section]);\n      } else {\n        console.log(`${section}에 대한 라우트를 찾을 수 없습니다.`);\n      }\n    },\n    goToMember() {\n      if (this.isLogin) {\n        this.$router.push('/user/edit-info');\n      } else {\n        this.$router.push('/login');\n      }\n    },\n    goToMenu() {\n      console.log('Go to menu');\n    },\n    doLogout() {\n      localStorage.removeItem('role');\n      localStorage.removeItem('token');\n      this.isLogin = false;\n      localStorage.removeItem('notifications'); // 로그아웃 시 알림 목록 제거\n      window.location.reload();\n    }\n  }\n};","map":{"version":3,"names":["axios","EventSourcePolyfill","name","data","logo","require","isLogin","notifications","computed","unreadNotificationCount","filter","notification","delYN","length","created","token","localStorage","getItem","fetchNotifications","setupSSE","methods","get","process","env","VUE_APP_API_BASE_URL","headers","Authorization","then","response","console","log","catch","error","eventSource","addEventListener","event","JSON","parse","push","onerror","markAsRead","id","find","n","navigate","section","routes","params","category","$router","goToMember","goToMenu","doLogout","removeItem","window","location","reload"],"sources":["/Users/milcho/Project/TEENKIRI/teenkiri_front/teenkiri_front/src/components/HeaderComponent.vue"],"sourcesContent":["<template>\n  <v-app-bar app>\n    <v-container>\n      <v-row align=\"center\">\n        <v-col cols=\"3\">\n          <v-toolbar-title>\n            <router-link to=\"/\" class=\"logo\">\n              <img :src=\"logo\" alt=\"로고\" class=\"logo-image\" />\n            </router-link>\n          </v-toolbar-title>\n        </v-col>\n        <v-col cols=\"6\">\n          <v-row justify=\"center\">\n            <v-btn text @click=\"navigate('강좌')\">강좌</v-btn>\n            <v-btn text @click=\"navigate('추천')\">추천</v-btn>\n            <v-btn text @click=\"navigate('이벤트')\">이벤트</v-btn>\n            <v-btn text @click=\"navigate('공지사항')\">공지사항</v-btn>\n            <v-btn text @click=\"navigate('자유게시판')\">자유게시판</v-btn>\n            <v-btn text @click=\"navigate('QnA')\">질문게시판</v-btn>\n          </v-row>\n        </v-col>\n        <v-col cols=\"3\" class=\"text-right\">\n          <v-btn icon @click=\"goToMember\">\n            <v-icon>mdi-account</v-icon>\n          </v-btn>\n          <v-btn v-if=\"isLogin\" @click=\"doLogout\">로그아웃</v-btn>\n          <v-btn icon @click=\"goToMenu\">\n            <v-icon>mdi-menu</v-icon>\n          </v-btn>\n\n          <!-- 알림 아이콘 및 알림 목록 -->\n          <v-menu offset-y>\n            <template v-slot:activator=\"{ props }\">\n              <v-btn icon v-bind=\"props\">\n                <v-badge\n                  color=\"red\"\n                  :content=\"unreadNotificationCount\"\n                  overlap\n                  v-if=\"unreadNotificationCount > 0\"\n                >\n                  <v-icon>mdi-bell</v-icon>\n                </v-badge>\n                <v-icon v-else>mdi-bell</v-icon>\n              </v-btn>\n            </template>\n            <v-list>\n              <v-list-item\n                v-for=\"(notification, index) in notifications\"\n                :key=\"index\"\n                @click=\"markAsRead(notification.id)\"\n                :class=\"{ read: notification.delYN === 'Y' }\"\n              >\n                <v-list-item-content>\n                  <v-list-item-title>{{ notification.message }}</v-list-item-title>\n                </v-list-item-content>\n              </v-list-item>\n            </v-list>\n          </v-menu>\n        </v-col>\n      </v-row>\n    </v-container>\n  </v-app-bar>\n</template>\n\n<script>\nimport axios from 'axios';\nimport { EventSourcePolyfill } from 'event-source-polyfill';\n\nexport default {\n  name: 'HeaderComponent',\n  data() {\n    return {\n      logo: require('@/assets/images/ico_logo.png'),\n      isLogin: false,\n      notifications: [],\n    };\n  },\n  computed: {\n    unreadNotificationCount() {\n      return this.notifications.filter(notification => notification.delYN === 'N').length;\n    }\n  },\n  created() {\n    const token = localStorage.getItem('token');\n    this.isLogin = !!token;\n\n    if (this.isLogin) {\n      this.fetchNotifications(); // 새로고침 시에만 전체 알림 목록을 가져옵니다.\n      this.setupSSE(); // SSE 연결을 설정하여 실시간 알림을 받습니다.\n    }\n  },\n  methods: {\n    fetchNotifications() {\n      axios.get(`${process.env.VUE_APP_API_BASE_URL}/api/notifications/list`, {\n        headers: {\n          Authorization: `Bearer ${localStorage.getItem('token')}`,\n        },\n      })\n        .then(response => {\n          this.notifications = response.data;\n          console.log(this.notifications);\n        })\n        .catch(error => {\n          console.error('알림 가져오기 오류:', error);\n        });\n    },\n    setupSSE() {\n      const token = localStorage.getItem('token');\n      const eventSource = new EventSourcePolyfill(`${process.env.VUE_APP_API_BASE_URL}/subscribe`, {\n        headers: {\n          Authorization: `Bearer ${token}`,\n        },\n      });\n\n      eventSource.addEventListener('notification', (event) => {\n        const notification = JSON.parse(event.data);\n        console.log('실시간 알림 수신:', notification);\n        this.notifications.push(notification); // 실시간 알림을 추가합니다.\n      });\n\n      eventSource.onerror = (error) => {\n        console.error('SSE 연결 오류:', error);\n      };\n    },\n    markAsRead(id) {\n      axios.get(`${process.env.VUE_APP_API_BASE_URL}/api/notifications/update/${id}`, {\n        headers: {\n          Authorization: `Bearer ${localStorage.getItem('token')}`,\n        },\n      })\n        .then(() => {\n          const notification = this.notifications.find(n => n.id === id);\n          if (notification) {\n            notification.delYN = 'Y';\n          }\n        })\n        .catch(error => {\n          console.error('알림 상태 업데이트 오류:', error);\n        });\n    },\n    navigate(section) {\n      const routes = {\n        '강좌': { name: 'SubjectList', params: { category: 'subject' } },\n        '추천': { name: 'Recommendation' }, // 예시로 추천을 추가했습니다. 실제 라우트로 변경하세요.\n        '이벤트': { name: 'BoardList', params: { category: 'event' } },\n        '공지사항': { name: 'BoardList', params: { category: 'notice' } },\n        '자유게시판': { name: 'BoardList', params: { category: 'post' } },\n        'QnA': { name: 'QnaList', params: { category: 'qna' } }\n      };\n\n      if (routes[section]) {\n        this.$router.push(routes[section]);\n      } else {\n        console.log(`${section}에 대한 라우트를 찾을 수 없습니다.`);\n      }\n    },\n    goToMember() {\n      if (this.isLogin) {\n        this.$router.push('/user/edit-info');\n      } else {\n        this.$router.push('/login');\n      }\n    },\n    goToMenu() {\n      console.log('Go to menu');\n    },\n    doLogout() {\n      localStorage.removeItem('role');\n      localStorage.removeItem('token');\n      this.isLogin = false;\n      localStorage.removeItem('notifications'); // 로그아웃 시 알림 목록 제거\n      window.location.reload();\n    }\n  }\n};\n</script>\n\n<style scoped>\n.logo {\n  font-weight: bold;\n  color: inherit;\n  text-decoration: none;\n}\n\n.logo-image {\n  height: 10%;\n}\n\n.read {\n  background-color: #f0f0f0; /* 읽은 알림의 배경색 */\n}\n</style>\n"],"mappings":";AAiEA,OAAOA,KAAI,MAAO,OAAO;AACzB,SAASC,mBAAkB,QAAS,uBAAuB;AAE3D,eAAe;EACbC,IAAI,EAAE,iBAAiB;EACvBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,IAAI,EAAEC,OAAO,CAAC,8BAA8B,CAAC;MAC7CC,OAAO,EAAE,KAAK;MACdC,aAAa,EAAE;IACjB,CAAC;EACH,CAAC;EACDC,QAAQ,EAAE;IACRC,uBAAuBA,CAAA,EAAG;MACxB,OAAO,IAAI,CAACF,aAAa,CAACG,MAAM,CAACC,YAAW,IAAKA,YAAY,CAACC,KAAI,KAAM,GAAG,CAAC,CAACC,MAAM;IACrF;EACF,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,MAAMC,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,OAAO,CAAC;IAC3C,IAAI,CAACX,OAAM,GAAI,CAAC,CAACS,KAAK;IAEtB,IAAI,IAAI,CAACT,OAAO,EAAE;MAChB,IAAI,CAACY,kBAAkB,CAAC,CAAC,EAAE;MAC3B,IAAI,CAACC,QAAQ,CAAC,CAAC,EAAE;IACnB;EACF,CAAC;EACDC,OAAO,EAAE;IACPF,kBAAkBA,CAAA,EAAG;MACnBlB,KAAK,CAACqB,GAAG,CAAC,GAAGC,OAAO,CAACC,GAAG,CAACC,oBAAoB,yBAAyB,EAAE;QACtEC,OAAO,EAAE;UACPC,aAAa,EAAE,UAAUV,YAAY,CAACC,OAAO,CAAC,OAAO,CAAC;QACxD;MACF,CAAC,EACEU,IAAI,CAACC,QAAO,IAAK;QAChB,IAAI,CAACrB,aAAY,GAAIqB,QAAQ,CAACzB,IAAI;QAClC0B,OAAO,CAACC,GAAG,CAAC,IAAI,CAACvB,aAAa,CAAC;MACjC,CAAC,EACAwB,KAAK,CAACC,KAAI,IAAK;QACdH,OAAO,CAACG,KAAK,CAAC,aAAa,EAAEA,KAAK,CAAC;MACrC,CAAC,CAAC;IACN,CAAC;IACDb,QAAQA,CAAA,EAAG;MACT,MAAMJ,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,OAAO,CAAC;MAC3C,MAAMgB,WAAU,GAAI,IAAIhC,mBAAmB,CAAC,GAAGqB,OAAO,CAACC,GAAG,CAACC,oBAAoB,YAAY,EAAE;QAC3FC,OAAO,EAAE;UACPC,aAAa,EAAE,UAAUX,KAAK;QAChC;MACF,CAAC,CAAC;MAEFkB,WAAW,CAACC,gBAAgB,CAAC,cAAc,EAAGC,KAAK,IAAK;QACtD,MAAMxB,YAAW,GAAIyB,IAAI,CAACC,KAAK,CAACF,KAAK,CAAChC,IAAI,CAAC;QAC3C0B,OAAO,CAACC,GAAG,CAAC,YAAY,EAAEnB,YAAY,CAAC;QACvC,IAAI,CAACJ,aAAa,CAAC+B,IAAI,CAAC3B,YAAY,CAAC,EAAE;MACzC,CAAC,CAAC;MAEFsB,WAAW,CAACM,OAAM,GAAKP,KAAK,IAAK;QAC/BH,OAAO,CAACG,KA